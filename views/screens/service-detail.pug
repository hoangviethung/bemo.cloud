extends ../layouts/layout

block params
    - class_body = "service-detail-page"
    - title_page = "Bemo Cloud | Service Detail"
    - url_bg_banner_title = "../assets/images/banner-title/hrm.png"
    - heading_banner_title = "Bemo - Quản trị nguồn nhân lực"
    - desc_banner_title = "Phát triển nhân sự toàn diện trong kỷ nguyên số"
block css
    link(rel="stylesheet", href="./assets/css/service-detail.css")
block js
block main
    include ../components/banner-title
    section.service-dt-summary
        .container
            .row
                .col-lg-4
                    .summary__item
                        .image
                            img(src="./assets/images/service-detail/hrm-01.png", alt="hrm")
                        .content
                            h3 Tự Động Hóa Mọi Quy Trình
                            p Tiết kiệm thời gian thực hiện thủ tục, nghiệp vụ nhân sự. Giảm thiểu sự chậm trễ, sai sót
                .col-lg-4
                    .summary__item
                        .image
                            img(src="./assets/images/service-detail/hrm-02.png", alt="hrm")
                        .content
                            h3 Quản Lý Tài Sản Hiệu Quả
                            p Giúp nhà lãnh đạo nắm bắt tức thời với đa dạng báo cáo về tình hình biến động nhân sự, hiệu quả tuyển dụng, quỹ lương, … trên mọi thiết bị.
                .col-lg-4
                    .summary__item
                        .image
                            img(src="./assets/images/service-detail/hrm-03.png", alt="hrm")
                        .content
                            h3 Hiệu Quả Quản Trị Nhân Lực
                            p Giúp nhà lãnh đạo nắm bắt tức thời với đa dạng báo cáo về tình hình biến động nhân sự, hiệu quả tuyển dụng, quỹ lương, … trên mọi thiết bị.
    section.service-dt-contents
        .container
            .title-default.title-default--center
                h3.sub-title-default Bemo Recruitment
                h2.main-title-default BEMO - Quản Lý Tuyển Dụng
            .content-wrapper
                .image
                    img(src="./assets/images/service-detail/hrm-content-01.png", alt="hrm")
                .contents
                    ul.list-contents
                        li.content__item
                            h5 Tự động hóa quy trình
                            p Tự động hóa quy trình tuyển dụng cho doanh nghiệp, giảm thiểu thời gian xử lý, nhập liệu… tăng hiệu quả tìm kiếm nhân tài.
                        li.content__item
                            h5 Tích hợp đa dạng
                            p Tích hợp với nhiều website tuyển dụng hàng đầu.
                        li.content__item
                            h5 Gợi ý thông minh
                            p Gợi ý ứng viên phù hợp với vị trí đăng tuyển.
                        li.content__item
                            h5 Tự thiết kế mẫu
                            p Dễ dàng thiết kế mẫu đơn ứng tuyển cho từng vị trí, thư mời nhận việc…
                        li.content__item
                            h5 Tương thích giao diện
                            p Tương thích với giao diện máy tính, máy tính bảng và điện thoại di động
                        li.content__item
                            h5 Linh hoạt thiết kế
                            p Linh hoạt trong việc thiết kế giao diện và cơ sở dữ liệu theo nhu cầu sử dụng.
                        li.content__item
                            h5 Tối ưu hoá
                            p Tối ưu nguồn dữ liệu ứng viên sẵn có.
    section.service-dt-contents
        .container
            .title-default.title-default--center
                h3.sub-title-default Bemo Employees
                h2.main-title-default BEMO - Quản trị thông tin nhân sự
            .content-wrapper
                .image
                    img(src="./assets/images/service-detail/hrm-content-02.png", alt="hrm")
                .contents
                    ul.list-contents
                        li.content__item
                            h5 Soạn thảo hiệu quả
                            p Tính năng soạn thảo và quản lý hợp đồng hiệu quả.
                        li.content__item
                            h5 Quản lý chế độ thông minh
                            p Thiết kế và quản lý hệ thống chính sách, chế độ phúc lợi minh bạch, hỗ trợ tính lương chính xác.
                        li.content__item
                            h5 Dễ sử dụng
                            p Giao diện quản lý trực quan, dễ sử dụng cho các phòng ban.
                        li.content__item
                            h5 Tối ưu nguồn nhân lực
                            p Đánh giá và giúp tối ưu hiệu quả sử dụng nguồn nhân lực: giúp doanh nghiệp có thể đánh giá xuyên suốt quá trình làm việc, kết quả, quá trình đào tạo… của nhân viên, từ đó hỗ trợ công tác giao việc tối ưu.
                        li.content__item
                            h5 Cung cấp dữ liệu
                            p Cung cấp dữ liệu toàn diện cho nhân viên trong suốt quá trình làm việc tại doanh nghiệp
    section.service-dt-contents
        .container
            .title-default.title-default--center
                h3.sub-title-default Bemo Attendances
                h2.main-title-default BEMO - Quản lý chấm công
            .content-wrapper
                .image
                    img(src="./assets/images/service-detail/hrm-content-03.png", alt="hrm")
                .contents
                    ul.list-contents
                        li.content__item
                            h5 Nhanh chóng
                            p Hiển thị thông tin chấm công nhanh chóng, thông minh đến nhân viên và cấp quản lý
                        li.content__item
                            h5 Phản hồi dễ dàng
                            p Dễ dàng nhận được phản hồi của nhân viên về thông tin chấm công
                        li.content__item
                            h5 Gợi ý thông minh
                            p Dễ dàng nhận được phản hồi của nhân viên về thông tin chấm công
                        li.content__item
                            h5 Tiết kiệm thời gian
                            p Không còn tiêu tốn thời gian so sánh dữ liệu một cách thủ công từ các nguồn khác nhau
                        li.content__item
                            h5 Quản trị đơn giản
                            p Giúp các nhà quản lý dễ dàng phê duyệt và quản trị thời gian làm việc của thành viên trong bộ phận
                        li.content__item
                            h5 Kết nối đơn giản
                            p Kết nối với nhiều ứng dụng quản lý chấm công khác nhau
                        li.content__item
                            h5 Linh hoạt
                            p Bộ lọc linh hoạt giúp người dùng tìm kiếm thuận tiện
                        li.content__item
                            h5 Kết xuất tiện lợi
                            p Dễ dàng nhập và kết xuất cơ sở dữ liệu đáp ứng yêu cầu xử lý công việc
    section.service-dt-contents
        .container
            .title-default.title-default--center
                h3.sub-title-default Bemo Insurance
                h2.main-title-default BEMO - Lương & chế độ phúc lợi
            .content-wrapper
                .image
                    img(src="./assets/images/service-detail/hrm-content-04.png", alt="hrm")
                .contents
                    ul.list-contents
                        li.content__item
                            h5 Thiết kế phù hợp
                            p Thiết kế bảng tính lương phù hợp với doanh nghiệp
                        li.content__item
                            h5 Linh động
                            p Tùy chọn tính lương theo hiệu quả công việc được giao
                        li.content__item
                            h5 Sử dụng tối ưu
                            p Quản trị chi phí lương cho bộ phận, dự án…, giúp nhà quản trị sử dụng hiệu quả nguồn nhân lực
    section.service-dt-contents
        .container
            .title-default.title-default--center
                h3.sub-title-default Bemo Tranning
                h2.main-title-default BEMO - ĐÀO TẠO
            .content-wrapper
                .image
                    img(src="./assets/images/service-detail/hrm-content-05.png", alt="hrm")
                .contents
                    ul.list-contents
                        li.content__item
                            h5 Công nghệ đào tạo thông minh
                            p Công cụ hỗ trợ đào tạo 4.0 thông minh
                        li.content__item
                            h5 Đánh giá toàn diện
                            p Theo dõi và đánh giá quá trình đào tạo của một nhân viên: đào tạo nội bộ, bên ngoài…
                        li.content__item
                            h5 Lộ trình sự nghiệp
                            p Lộ trình sự nghiệp khoa học và chuyên nghiệp
                        li.content__item
                            h5 Đánh giá toàn diện
                            p Đào tạo phát triển nhân lực bền vững.
    include ../components/call-to-action-01.pug